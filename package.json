{
  "name": "LWC-Local-Development-with-LWR",
  "version": "0.0.1",
  "license": "MIT",
  "private": true,
  "type": "module",
  "nodemonConfig": {
    "ext": "js,html,css",
    "ignore": [
      "__lwr_cache__"
    ]
  },
  "scripts": {
    "clean": "rm -rf __lwr_cache__",
    "start": "lwr serve --mode prod",
    "start:compat": "lwr serve --mode compat",
    "start:prod-compat": "lwr serve --mode prod-compat",
    "dev": "lwr serve",
    "build": "lwr build"
  },
  "dependencies": {
    "d3": "^6.7.0",
    "lwc": "2.17.0",
    "lwr": "0.8.12",
    "monaco-editor": "^0.35.0"
  },
  "engines": {
    "node": ">=14.15.4 <19"
  },
  "devDependencies": {
    "nodemon": "^2.0.20"
  }
}
